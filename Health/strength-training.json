        {
          "name": "Seated Soleus Raise",
          "sets": 2,
          "reps": "12-15",
          "notes": "Pause at top"
        },
        {
          "name": "Dead Bug",
          "sets": 3,
          "reps": "8 each side",
          "notes": "Slow and controlled, brace throughout"
        },
        {
          "name": "Pallof Press",
          "sets": 3,
          "hold_seconds": 20,
          "notes": "Each side, anti-rotation focus"
        },
        {
          "name": "Side Plank",
          "sets": 2,
          "hold_seconds": 30,
          "notes": "Each side"
        }
      ]
